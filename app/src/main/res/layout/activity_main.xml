<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>
        <variable
            name="equation"
            type="com.example.calculator.EquationModel" />
    </data>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.sample.foo.calculator.MainActivity">

        <TextView
            android:id="@+id/equation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="end"
            android:textAlignment="textEnd"
            android:lines="2"
            android:maxLines="2"
            android:textSize="30sp"
            android:text="@{equation.fullEquation}"/>

        <Button
            android:id="@+id/button1"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/equation"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/equation"
            android:layout_toRightOf="@id/button1"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/equation"
            android:layout_toRightOf="@id/button2"
            android:text="3" />

        <Button
            android:id="@+id/button4"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button1"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button2"
            android:layout_toRightOf="@id/button4"
            android:text="5" />

        <Button
            android:id="@+id/button6"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button3"
            android:layout_toRightOf="@id/button5"
            android:text="6" />

        <Button
            android:id="@+id/button7"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button4"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button5"
            android:layout_toRightOf="@id/button7"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button6"
            android:layout_toRightOf="@id/button8"
            android:text="9" />

        <Button
            android:id="@+id/button0"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button8"
            android:layout_toRightOf="@id/buttonDot"
            android:text="0" />

        <Button
            android:id="@+id/buttonDot"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button7"
            android:text="." />

        <Button
            android:id="@+id/buttonEqual"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button9"
            android:layout_toRightOf="@id/button0"
            android:text="=" />

        <Button
            android:id="@+id/buttonMultiply"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/equation"
            android:layout_toRightOf="@id/button3"
            android:text="*" />

        <Button
            android:id="@+id/buttonDivide"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonMultiply"
            android:layout_toRightOf="@id/button6"
            android:text="/" />

        <Button
            android:id="@+id/buttonAdd"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonDivide"
            android:layout_toRightOf="@id/button9"
            android:text="+" />

        <Button
            android:id="@+id/buttonSubtract"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonAdd"
            android:layout_toRightOf="@id/buttonEqual"
            android:text="-" />

        <Button
            android:id="@+id/buttonInvert"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonDot"
            android:text="+/-" />

        <Button
            android:id="@+id/buttonClear"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonSubtract"
            android:layout_toRightOf="@id/button3"
            android:text="C"
            android:textColor="@color/red" />

        <Button
            android:id="@+id/buttonClearEntry"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonEqual"
            android:layout_toLeftOf="@id/buttonClear"
            android:text="CE" />
    </RelativeLayout>

</layout>